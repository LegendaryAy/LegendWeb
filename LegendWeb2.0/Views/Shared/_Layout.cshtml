<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LegendPortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1 class="logo"><a asp-area="" asp-controller="Home" asp-action="Index">Ayobammy</a></h1>
            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Profile" asp-action="Board">About</a></li>
                    <li><a asp-area="" asp-controller="Contact" asp-action="Form">Contact</a></li>

                </ul>
            </nav><!-- .nav-menu -->
            <div class="menu-btn" onclick="openNav()">
                <div class="menu"></div>
                <div class="menu"></div>
                <div class="menu"></div>
                <div id="mySidenav" class="sidenav">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="Profile" asp-action="Board">About</a>
                    <a asp-area="" asp-controller="Contact" asp-action="Form">Contact</a>
                </div>
            </div>
        </div>

    </header><!-- End Header -->

    <div class="container-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>Ayobammy</span></strong>. All Rights Reserved
            </div>
            <div class="social-links">
                <a href="https://twitter.com/ayobami_fadeni" class="twitter"><i class="fa fa-twitter"></i></a>
                <a href="https://www.facebook.com/psalmuherl.phardeynee" class="facebook"><i class="fa fa-facebook"></i></a>
                <a href="https://www.instagram.com/ii.am.legend/" class="instagram"><i class="fa fa-instagram"></i></a>
                <a href="https://www.linkedin.com/in/ayobami-fadeni/" class="linkedin"><i class="fa fa-linkedin"></i></a>
            </div>
        </div>
    </footer><!-- End  Footer -->
    <script>
        function openNav() {
            var element = document.getElementById("mySidenav");
            element.classList.toggle("show-sidenav")
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
